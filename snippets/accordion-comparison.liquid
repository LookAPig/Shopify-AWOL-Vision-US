<script>
  const list_comparison_item = document.getElementsByClassName('list_comparison_item');
  
  const listMinHeight = $(".list_comparison_item").prop('scrollHeight') * 5
  const listMaxHeight = $(".list_comparison_item").prop('scrollHeight') * list_comparison_item.length

  $('.accordion_comparison_body').css('max-height', listMinHeight)

  for(let i = 0; i < 10; i++) {
    list_comparison_item[i].style.opacity = (10 - i) / 10;
  }
  $('.show_more_comparison').on('click', function() {
    $(this).hide() 
    $('.accordion_comparison_body').css('max-height', listMaxHeight + 200)
    for(let i = 0; i < list_comparison_item.length; i++) {
      setTimeout(() => {
        list_comparison_item[i].style.opacity = 1;
      }, i * 60);
    }
  })
</script>