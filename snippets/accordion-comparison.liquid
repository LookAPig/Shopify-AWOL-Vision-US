            background: linear-gradient(180deg, #FFF 0%, #66B0DB 80.2%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;  
            font-weight: 600;
        }
        .two.red,
        .two .red {
            background: linear-gradient(180deg, #FFF 0%, #db6666 80.2%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 600;
        }
    }
    .accordion_comparison_body .list_comparison_item:first-of-type {
