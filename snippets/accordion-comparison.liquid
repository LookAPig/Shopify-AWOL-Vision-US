        align-items: center;
        justify-content: center;
        gap: 9px;
        padding: 12px 22px;
        background-color: #FFF;
        cursor: pointer;
        position: absolute;
        left: 50%;
        bottom: 30px;
        transition: all 0.5s ease;
        transform: translateX(-50%);
        border-radius: 50px;
    }
    @media screen and (max-width: 1024px) {
        .mobile {
          display: block;
        }
        .accordion {
          padding: 0 16px;
        }
        .accordion_title {
          font-size: 22px;
          margin: 0;
        }
        .accordion_comparison_body .list_comparison_item:first-of-type .comparison_title {
          font-size: 13px;
        }
        .accordion_comparison_body .list_comparison_item svg {
          width: 100%;
        }
        .accordion_comparison_body .list_comparison_item {
