{% style %}
  .commitments_container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px 0px;
    padding: 12px;
  }
  .commitments_container div {
    font-style: normal;
    line-height: normal;
    font-weight: 600;
    display: flex;
    align-items: baseline;
    gap: 0 6px;
  }
  .commitments_container div:nth-of-type(even) {
    margin-left: 10px;
  }
  @media screen and (max-width: 749px) {
    .commitments_container{
      width: 500px;
    }
  }
{% endstyle %}
<div class="commitments_container">
  {% liquid
    assign product_metafields = product.metafields
  %}
  {{ product_metafields.custom.commitments }}
</div>