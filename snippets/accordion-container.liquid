<style>
    .accordion_title {
        color: #FFF;
        font-family: 'AWOL-DM-Regular';
        font-size: 40px;
        font-style: normal;
        font-weight: 600;
        line-height: 115%; /* 46px */
        letter-spacing: -1.2px;
        text-transform: capitalize;
    }
    .accordion_body {
        transition: all 0.5s ease;
        overflow: hidden;
    }
    .accordion_body .list_item {
        padding: 16px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.20);
        display: grid;
        grid-template-columns: 1fr 3fr;
        transition: all 0.5s ease;
        opacity: 0.1;
        .left {
            color: #FFF;
            font-family: 'AWOL-DM-Regular';
            font-size: 16px;
            font-style: normal;
            font-weight: 500;
            line-height: 133%; /* 21.28px */
        }
        .main_title {
            color: #FFF;
            font-family: 'AWOL-DM-Regular';
            font-size: 24px;
            font-style: normal;
            font-weight: 500;
            line-height: 133%; /* 31.92px */ 
            margin-top: 50px;
        }
        .right {
            color: #6D6D6D;
            font-family: 'AWOL-DM-Regular';
            font-size: 16px;
            font-style: normal;
            font-weight: 500;
            line-height: 133%; /* 21.28px */
        }
    }
    .show_more_infomation {
        color: #1B1D1D;
        font-family: 'AWOL-DM-Regular';
        font-size: 14px;
        font-style: normal;
        font-weight: 700;
        line-height: 20px; /* 142.857% */
        letter-spacing: 0.98px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 9px;
        padding: 12px 22px;
        background-color: #FFF;
        cursor: pointer;
        position: absolute;
        left: 50%;
        bottom: 30px;
        transition: all 0.5s ease;
        transform: translateX(-50%);
        border-radius: 50px;
    }
    @media screen and (max-width: 1024px) {
        .mobile {
            display: block;
        }
        .accordion {
            padding: 0 16px;
        }
        .accordion_title {
            font-size: 22px;
        }
        .accordion_body .list_item {
            grid-template-columns: 1fr 2fr;
            gap: 10px;
            .main_title {
                font-size: 18px!important;
                font-weight: 700;
                margin-top: 20px;
                grid-column-start: 1;
                grid-column-end: 3;
            }
            .left {
                font-size: 14px;
            }
            .right {
                font-size: 14px;
            }
        }
        .show_more_infomation {
          padding: 10px;
          font-size: 12px;
        }
    }
</style>
