<script>
  const elements = document.getElementsByClassName('list_item');
  
  const minHeight = $(".list_item").prop('scrollHeight') * 6
  const maxHeight = $(".list_item").prop('scrollHeight') * elements.length

  $('.accordion_body').css('max-height', minHeight)

  for(let i = 0; i < 10; i++) {
    elements[i].style.opacity = (10 - i) / 10;
  }
  $('.show_more_infomation').on('click', function() {
    $(this).hide() 
    $('.accordion_body').css('max-height', maxHeight + 200)
    for(let i = 0; i < elements.length; i++) {
      setTimeout(() => {
        elements[i].style.opacity = 1;
      }, i * 60);
    }
  })
</script>