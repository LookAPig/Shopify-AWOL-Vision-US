  .countdown-container {
    margin-top: 60px;
    display: flex;
    position: relative;
    text-align: center;
    flex-direction: column;
    align-items: center;
    /* justify-content: space-around; */
    /* background: #111828; */
    padding: 10px;
    color: white;
    width: 100%;
    max-width: 1200px;
    margin: 20px auto 0px auto;
    /* background: rgba(0, 0, 0, 0.2); */
    border-radius: 16px;
  }
  .countdown-container a {display: flex; align-items: baseline;gap: 10px;}
  .countdown-container a span.main_title {
