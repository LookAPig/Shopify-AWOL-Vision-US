    color: #fff;
    display: flex;
    align-items: center;
    margin-left: 16px;
    justify-content: center;
  }
  .index-countdown {
    display: flex;
    gap: 10px;
    align-items: center;
    max-width: 100%;
  }
  .countdown-container .unit {
    color: #fff;
    font-size: 24px;
    margin-top: 20px;
    display: block;
  }
