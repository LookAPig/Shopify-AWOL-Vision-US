<style>
  @font-face {
    font-family: "AWOL-DM-Regular";
    src: url("https://cdn.shopify.com/s/files/1/0554/7445/4576/files/AWOL-DM-Regular.otf?v=1727076025") format("opentype");
    font-weight: 200 800;
  }
  @font-face {
    font-family: "AWOL-DM-Bold";
    src: url("https://cdn.shopify.com/s/files/1/0554/7445/4576/files/AWOL-DM-Bold.otf?v=1727075521") format("opentype");
    font-weight: 200 800;
  }
