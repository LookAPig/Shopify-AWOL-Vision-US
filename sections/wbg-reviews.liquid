{{ 'wbg-vision-mission.css' | asset_url | stylesheet_tag }}
<div class="wbg-review-container-outter">
  <div class="wbg-review-container">
    <h3>{{ section.settings.heading }}</h3>
    <div class="desc">{{ section.settings.content }}</div>

    <div class="customer-review-slick-container">
      {%- for block in section.blocks -%}
        <div class="customer-review-slick-item">
          <div class="img-padding">
            <img
              src="{{ block.settings.image | img_url: 'master' }}"
              loading="lazy"
              alt="{{ block.settings.title }}"
              width="auto"
              height="auto"
            >
          </div>

          <div class="text-content">
            {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
            {% endif %}
            {% if block.settings.content %}
              {{ block.settings.content }}
            {% endif %}
            {% if block.settings.name %}
              <p>{{ block.settings.name }}</p>
            {% endif %}

            <span>
              <a
                href="{{ block.settings.button_link }}"
                title="{{- block.settings.button_text -}}"
                target="_blank"
                tabindex="-1"
              >
                {{- block.settings.button_text -}}
              </a>
            </span>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <div class="">
    <div class="wbg-vision-mission-content">
      <div class="wbg-vision-mission-inner">
        <div class="wbg-vision-mission-inner-background">
          <div class="wbg-vision-mission-section-group">
            <div class="wbg-vision-mission-section">
              {% comment %}
                <img
                    src="https://cdn.shopify.com/s/files/1/0554/7445/4576/files/image_10.png?v=1700700081"
                    alt="vision"
                    class="wbg-vision-mission-section-image"
                >
              {% endcomment %}
              <video
                playsinline
                autoplay
                controls
                muted
                loop
                poster="{{ section.settings.image | img_url: 'x1920'}}"
              >
                <source src="{{ section.settings.video_url }}" type="video/mp4">
              </video>
              <div class="wbg-vision-mission-section-hero">
                <div class="wbg-vision-mission-section-title">
                  <p>Our Mission</p>
                </div>
                <div class="wbg-vision-mission-section-subtitle">
                  <p></p>
                </div>
                <div class="wbg-mission-body">
                  <p>Elevate Home Entertainment to the Next Level</p>
                  <a href="https://awolvision.com/pages/about-us" aria-label="read more about us" class="wbg-button">READ MORE</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function () {
  // $("video").attr('muted', false);
  $('#shopify-section-{{ section.id }}') > $('.customer-review-slick-container').slick({
    prevArrow: '<span class="arrow arrow-prev"><svg width="25" height="44" viewBox="0 0 25 44"><path d="M3 22L22 3L9.53125 22L22 41L3 22Z" stroke="#222222" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/></svg></span>',
    nextArrow: '<span class="arrow arrow-next"><svg width="25" height="44" viewBox="0 0 25 44"><path d="M3 22L22 3L9.53125 22L22 41L3 22Z" stroke="#222222" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/></svg></span>',
    slidesToShow: 3, slidesToScroll: 3, dots: false,
    autoplay: true,
    autoplaySpeed: {{ section.settings.cycle_speed | times: 1000}},
    responsive: [
      {
        breakpoint: 1201, settings: {slidesToShow: 3, slidesToScroll: 3}
      },
      {
        breakpoint: 901, settings: {slidesToShow: 2, slidesToScroll: 2}
      },
      {
        breakpoint: 601, settings: {slidesToShow: 1, slidesToScroll: 1}
      }
    ]
  })
  });
</script>

{% schema %}
{
  "name": "WBG Customers Reviews",
  "class": "customer-review-slick",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customers Reviews"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Open the AWOL Vision Instagram album to see how others are making movie memories with AWOL products. Please share your memories @awolvision</p>"
    },
    {
      "type": "range",
      "id": "cycle_speed",
      "label": "Change slides every",
      "min": 1,
      "max": 20,
      "step": 1,
      "unit": "sec",
      "default": 5
    },
    {
      "id": "video_url",
      "type": "url",
      "label": "Video url"
    }, {
      "id": "image",
      "type": "image_picker",
      "label": "Preview image"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "review item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1:1 recommended"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "name"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>content.</p>"
        }, {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Learn More"
        }, {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "WBG Customers Reviews"
    }
  ]
}
{% endschema %}
