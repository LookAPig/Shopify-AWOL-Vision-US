<style>
  .trust-strong {
    --h: 120px; --gap: 10px; --icon: 72px;
    width: 100%; height: var(--h); background-color: rgb(var(--background));
  }
  .trust-strong::-webkit-scrollbar {display: none;}
  .trust-strong ul, .trust-strong p {margin: 0;}
  .trust-strong ul {display: flex; margin: 0 auto;}
  .trust-strong ul li {
    height: var(--h); font-size: 14px;
    display: flex; align-items: center; justify-content: center; flex: auto;
  }
  .trust-strong ul li b {display: block; font-size: var(--heading-h6-font-size); line-height: 1;}
  .trust-strong ul li img {max-width: 100%; width: var(--icon); margin-right: var(--gap);}
  
  /**
  @media screen and (min-width: 769px) {
    .trust-strong ul {grid-template-columns: repeat({{ section.blocks.size }}, 1fr);}
  }
  */

  @media screen and (max-width: 768px) {
    .trust-strong {
      --h: 70px; --icon: 32px;
      overflow-y: hidden; overflow-x: auto;
    }
    .trust-strong ul {width: 1024px; grid-auto-flow: column;}
    .trust-strong ul li {font-size: 12px;}
  }
</style>
<ul class="container" style="padding: 6px;">
  {%- for block in section.blocks -%}
    {%- if block.settings.subheading != blank or block.settings.heading != blank -%}
    <li>
      <img src="{{ block.settings.image | img_url: 'x100' }}" alt="{{ block.settings.heading | escape }}" />
      <p>
        <b>{{ block.settings.heading | escape }}</b>
        {{ block.settings.subheading | escape }}
      </p>
    </li>
    {%- endif -%}
  {%- endfor -%}
</ul>

{% schema %}
{
  "name": "trust strong", "class": "trust-strong", "max_blocks": 5,
  "blocks": [
    {
      "type": "item", "name": "Item",
      "settings": [
        {
          "type": "image_picker", "id": "image", "label": "Image",
          "info": "100 x 100px .jpg recommended"
        },
        {"type": "text", "id": "heading", "label": "Heading", "default": "Heading"},
        {"type": "text", "id": "subheading", "label": "Sub-heading", "default": "Sub-heading"}
      ]
    }
  ],
  "presets": [
    {"name": "trust strong"}
  ]
}
{% endschema %}