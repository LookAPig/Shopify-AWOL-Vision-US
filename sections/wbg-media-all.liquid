<script>
$(function () {
    var mySwiper = new Swiper('#shopify-section-{{ section.id }} .swiper', {
        autoplay: {
          delay: {{ section.settings.cycle_speed | times: 1000}},
          disableOnInteraction: false,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    })
    $('.media_logo_img img').on('click', function() {
        $('.evaluate').removeClass('active')
        $('.' + $(this).attr('alt')).addClass('active')
    })
});
</script>

{% schema %}
{
  "name": "WBG Media evaluate", "class": "customer-media",
  "settings": [
    {"type": "text", "id": "outlet", "label": "Outlet", "default": "outlet"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Media Highlights"},
    {"type": "color", "id": "backgroundColor", "label": "Background", "default": "#fff"},
    {
      "type": "richtext", "id": "content", "label": "Content",
      "default": "<p>Media evaluate</p>"
    },
    {
      "type": "range", "id": "cycle_speed", "label": "Change slides every",
      "min": 1, "max": 20, "step": 1, "unit": "sec", "default": 5
    }
  ],
  "blocks":[
    {
      "type": "item", "name": "review item",
      "settings": [
        {
          "type": "image_picker", "id": "image", "label": "Image",
          "info": "1:1 recommended"
        },
        {
          "type": "richtext", "id": "content", "label": "Content",
          "default": "<p>content.</p>"
        }
      ]
    }
  ],
  "presets": [
    {"name": "WBG Media evaluate"}
  ]
}
{% endschema %}