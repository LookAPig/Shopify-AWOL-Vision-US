{% endjavascript %}<style>
    #shopify-section-{{ section.id }} .swiper-button-next::after {
        content: "";
    }
    #shopify-section-{{ section.id }} .swiper-button-prev::after {

        content: "";
    }
      
    .media_body {width: 100%;background: {{ section.settings.backgroundColor }};}
    .media_container {
        --vertical-breather: 100px;
        width: 100%;
        max-width: var(--container-max-width);
        margin-left: auto;
        margin-right: auto;
        padding: var(--vertical-breather) 0;
    }
    .media_container h3 {text-align: center;}
    .media_context {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
    }
