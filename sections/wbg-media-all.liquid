    .media_evaluate {margin-left: 100px;margin-right: 100px;}
    .media_evaluate h3 {text-align: left;margin-bottom: 10px;font-size: 32px;}
    .media_evaluate, .media_logo {width: 50%;overflow: hidden;position: relative;}
    .media_logo img {width: 150px;}
    .media_logo_itmes {display: grid;grid-template-columns: repeat(2, 1fr);}
    .media_logo_itmes div {text-align: center;cursor: pointer;display: flex;align-items: center;justify-content: center;}
    .evaluate{ display: none; }
    .evaluate h3, .evaluate a{font-weight: 400; font-size: var(--heading-h3-font-size); opacity: 0;transition: all ease 0.3s;}
    .evaluate p {font-size: 18px}
    .evaluate.active {display: block;}
    .evaluate.active h3, .evaluate.active a {opacity: 1;}
    .media_evaluate h2 {}
    

    @media screen and (max-width: 749px) {
        .media_container {--vertical-breather: 60px;}
        .media_context {flex-direction: column;}
        .media_evaluate, .media_logo {width: 100%; padding: 0 20px;}
        .media_evaluate h3,.evaluate{text-align: center;}
