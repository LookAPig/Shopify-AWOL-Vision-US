<style>
  .customer-review-slick {
    padding: var(--vertical-breather) 0;
  }
  .customer-review-slick h3 {
    text-align: center;
    line-height: 1.2;
    font-size: 24px;
    font-weight: 700;
    margin: 0;
  }

  @media(min-width: 1025px) {
    .customer-review-slick h3 {
      font-size: 52px
    }
  }

  .customer-review-slick-container:not(.slick-slider) {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 20px;
  }
  @media screen and (max-width: 768px) {
    .customer-review-slick-container:not(.slick-slider) {
      grid-template-columns: 1fr;
    }
    .customer-review-slick-container:not(.slick-slider) .customer-review-slick-item:not(:first-child) {
      display: none;
    }
  }

  .customer-review-slick .desc {
    text-align: center;
    line-height: 1.3;
    font-size: 12px;
    margin: 10px 0 0;
  }

  @media(min-width: 1025px) {
    .customer-review-slick .desc {
      font-size: 22px;
      margin-top: 20px;
    }
  }

  .customer-review-slick .slick-slide {
    margin: 0 10px;
  }

  .customer-review-slick .arrow {
    width: 44px;
    height: 44px;
    background: #fff;
    border-radius: 99999px;
    cursor: pointer;
    box-shadow: 0 0 24px rgba(0, 0, 0, .14);
    position: absolute;
    top: 40%;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: translateY(-50%);
  }

  .customer-review-slick .arrow-prev {
    left: 0;
  }
  .customer-review-slick .arrow-next {
    right: 0;
  }
  .customer-review-slick .arrow svg {
    width: 10px;
    height: auto;
    display: block;
    opacity: 0.5;
    pointer-events: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none
  }
  @media(min-width: 1025px) {
    .customer-review-slick .arrow svg {
      width: 10px;
    }
  }
  .customer-review-slick .arrow-next svg {
    transform: rotateZ(180deg);
  }

  .customer-review-slick .slick-dots {
    list-style: none;
    margin: 4vw 0 0;
    padding: 0;
    padding: 0;
    justify-content: center;
    align-items: center;
  }
  .customer-review-slick .slick-dots button {
    display: none
  }
  .customer-review-slick .slick-dots li {
    width: 1.4vw;
    height: 1.4vw;
    background: #d9d9d9;
    margin: 0 0.6vw;
    border-radius: 99999px;
  }
  .customer-review-slick .slick-dots li.slick-active {
    background: #2b6fd5
  }

  .customer-review-slick .slick-list {
    padding: 20px 0
  }

  .customer-review-slick-item {
    overflow: hidden;
    border-radius: 14px;
    box-shadow: 0 0 12px rgba(0, 0, 0, .1)
  }
  .customer-review-slick-item .img-padding {
    position: relative;
    padding-bottom: 71.8%;
  }
  .customer-review-slick-item .img-padding img {
    width: 100%;
    height: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
  .customer-review-slick-item .text-content {
    padding: 16px 20px 24px
  }
  .customer-review-slick-item .text-content h5 {
    margin: 0;
    text-align: center;
    line-height: 1.2;
    font-size: 12px
  }

  .customer-review-slick-item .text-content h4 {
    font-size: 14px;
    line-height: 1.3;
    margin: 14px 0 0;
  }

  .customer-review-slick-item .text-content p {
    text-overflow: ellipsis;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    margin: 10px 0 0;
    line-height: 1.3;
    font-size: 12px;
    overflow: hidden;
    display: -webkit-box;
  }

  .customer-review-slick-item .text-content > span {
    display: block;
    margin-top: 8px;
    text-align: center;
    line-height: 1.5;
    font-size: 12px
  }

  .customer-review-slick-item .text-content > span a {
    text-decoration: underline;
    color: inherit;
  }

  @media(min-width: 1025px) {
    .customer-review-slick .slick-dots {
      margin-top: 2vw
    }
    .customer-review-slick .slick-dots li {
      width: 0.6vw;
      height: 0.6vw;
      margin: 0 0.4vw;
    }
  }
</style>
<h3>{{ section.settings.heading }}</h3>
<div class="desc">{{ section.settings.content }}</div>

<div class="customer-review-slick-container">
  {%- for block in section.blocks -%}
    <div class="customer-review-slick-item">
      <div class="img-padding">
        <img
          src="{{ block.settings.image | img_url: 'master' }}"
          loading="lazy"
          alt="{{ block.settings.title }}">
      </div>

      <div class="text-content">
        {% if block.settings.name %}
          <h5>{{ block.settings.name }}</h5>
        {% endif %}
        {% if block.settings.title %}
          <h4>{{ block.settings.title }}</h4>
        {% endif %}
        {% if block.settings.content %}
          {{ block.settings.content }}
        {% endif %}

        <span>
          <a
            href="{{ block.settings.button_link }}"
            title="{{ block.settings.button_text }}"
            target="_blank"
            tabindex="-1">{{ block.settings.button_text }}</a>
        </span>
      </div>
    </div>
  {%- endfor -%}
</div>

<script>
  $(function () {
  $('.customer-review-slick-container').slick({
    prevArrow: '<span class="arrow arrow-prev"><svg width="25" height="44" viewBox="0 0 25 44"><path d="M3 22L22 3L9.53125 22L22 41L3 22Z" stroke="#222222" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/></svg></span>',
    nextArrow: '<span class="arrow arrow-next"><svg width="25" height="44" viewBox="0 0 25 44"><path d="M3 22L22 3L9.53125 22L22 41L3 22Z" stroke="#222222" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/></svg></span>',
    slidesToShow: 4, slidesToScroll: 4, dots: true,
    responsive: [
      {
        breakpoint: 1501, settings: {slidesToShow: 4, slidesToScroll: 4}
      },
      {
        breakpoint: 1201, settings: {slidesToShow: 3, slidesToScroll: 3}
      },
      {
        breakpoint: 901, settings: {slidesToShow: 2, slidesToScroll: 2}
      },
      {
        breakpoint: 601, settings: {slidesToShow: 1, slidesToScroll: 1}
      }
    ]
  })
  });
</script>

{% schema %}
  {
    "name": "Customers Reviews",
    "class": "customer-review-slick container",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Customers Reviews"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "Content",
        "default": "<p>Open the AWOL Vision Instagram album to see how others are making movie memories with AWOL products. Please share your memories @awolvision</p>"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "review item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1:1 recommended"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name",
            "default": "name"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>content.</p>"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Learn More"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Customers Reviews"
      }
    ]
  }
{% endschema %}