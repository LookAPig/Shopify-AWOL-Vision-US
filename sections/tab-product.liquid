{%- assign color_label_list = 'general.label.color' | t | replace: ', ', ',' | downcase | split: ',' -%}
{%- assign color_white_label = 'general.label.white' | t | downcase -%}
{%- assign product_form_id = 'product-form-' | append: section.id | append: '-' | append: product.id -%}
{%- assign variant_picker_block = section.blocks | where: 'type', 'variant_picker' | first -%}
{%- assign buy_buttons_block = section.blocks | where: 'type', 'buy_buttons' | first -%}
{%- assign show_sticky_product = show_sticky_product -%}
{%- assign show_sticky_quick_view = show_sticky_quick_view -%}

<style>
  @font-face {
    font-family: "Manrope";
    src: url("https://cdn.shopify.com/s/files/1/0554/7445/4576/files/Manrope.woff2?v=1718257995") format("woff2-variations");
    font-weight: 400;
  }
  .tabs {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .product-tabs {
    padding: 20px 0;
    background: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }
  .product_tab_container {
    display: flex;
    gap: 60px;
  }
  .quick-list_item.active {
    color: #de2a2a;
  }
  .quick-list_item {
    font-family: 'Manrope'!important;
    font-size: 20px;
    font-weight: 500;
  }
  .mobile {
    display: none;
  }
  .fixed_p {
    width: 100%;
    position: fixed;
    top: 52.28px;
    left: 0;
    z-index: 10;
    background: #fff;
  }
  @media screen and (max-width: 960px) {
    .product-quick-view_list.pc {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      gap: 50px;
      position: fixed;
      top: 0px;
      left: 0;
      background: #fff;
      width: 100%;
    }
  }
  @media screen and (max-width: 992px) and (min-width: 768px) { 
    .product-quick-view_list.pc {
      top: 0;
      z-index: 1;
    }
  }
  @media screen and (max-width: 750px) {
    .pc {
      display: none;
    }
    .mobile {
      display: block;
    }
    .product-quick-view_list.pc {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      gap: 50px;
      position: fixed;
      top: 68px;
      left: 0;
      background: #fff;
      width: 100%;
    }
    .product-quick-view_list a {
      font-size: 16px;
    }
    .product-sticky-form__form {
      display: none;
      gap: 10px;
    }
    .product-sticky-form {
      background: #fff;
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      padding: 0;
    }
    .product-sticky-form .container {
      /* padding: 0; */
    }
    .product-sticky-form__form .product-sticky-form__payment-container,
    .product-sticky-form__form .buy_it_now {
      width: 100%;
    }
    .product_tab_container {width: 100%;gap: 50px;align-items: center;justify-content: center;}
    .quick-list_item {
      font-size: 16px;
    }
    .tabs {
      padding: 0 10px;
    }
    .shopify-section--product-tabs {
      position: sticky;
      top: 68px;
      z-index: 10;
    }
  }
  @media screen and (min-width: 1000px) {
    :root {
      --anchor-offset: 140px; /* When the sticky form is activate, every scroll must be offset by an extra value */
    }
  }
</style>

<section
  id="product-tabs"
  class="product-tabs section {% unless blends_with_background %}section--flush{% endunless %}"
>
  <div class="container tabs">
    <div class="product_tab_container">
      <a href="#" class="quick-list_item active" data-goTo="Description">Description </a>
      {% if product.metafields.custom.specification %}
        <a href="#" class="quick-list_item" data-goTo="Specification">Specification </a>
      {% endif %}
      <a href="#" class="quick-list_item" data-goTo="Reviews">Reviews </a>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Product tabs",
  "class": "shopify-section--product-tabs",
  "settings": [],
  "presets": [
    {
      "name": "Product tab",
      "settings": {
      }
    }
  ]
}
{% endschema %}
