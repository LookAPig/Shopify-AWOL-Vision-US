            gtag('event', 'begin_checkout', {
              send_to: GA4_Ids,
              currency: CURRENCY,
              value: item.price,
              items: [item]
            });
            // to avoid duplicate begin checkout when refreshing page
            localStorage['ga4.begin_checkout.items'] = cartItems;
          });

